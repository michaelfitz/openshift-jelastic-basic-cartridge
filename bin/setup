#!/bin/bash -e

set -u

for dir in logs tmp pid cache  env; do
	mkdir -p $dir
done

mkdir michael44
cd michael44
wget pub.scaledb.com/dump/mariadb-5.5.34-linux-x86_64.tar.gz
gunzip mariadb-5.5.34-linux-x86_64.tar.gz
tar xvf mariadb-5.5.34-linux-x86_64.tar
cd mariadb-5.5.34-linux-x86_64
bash scripts/mysql_install_db --defaults-file=/opt/repo/bin/config.cnf 
bin/mysqld --defaults-file=/opt/repo/bin/config.cnf 



